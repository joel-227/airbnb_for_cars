<div id="wrapper">
  <div class="container" style="width: 400px; margin: 20px 0;">
    <h1>My Cars</h1>
  </div>
  <hr>
  <div class="container">
    <div class="row">
    <!-- <% cars_by_price = @cars.sort_by { |car| car.price } %> -->
    <!-- <div class="container btn btn-secondary">Sort by price</div> -->
    <% @cars.each do |car| %>
        <div class="col-sm-3 mx-3">
          <div class="card mb-5" style="width: 18rem;">
            <%= link_to my_car_path(car) do %>
              <%= image_tag car.image_url, class: "card-img-top card-image" %>
            <% end %>
            <div class="card-body">
              <h5 class="card-title"> <%= car.model %></h5>
              <p class="card-text"> <%= car.age %> years old</p>
              <p class="card-text"> $ <%= car.price %></p>
              <span class="card-text"><%= link_to 'edit', edit_car_path(car) %></span>
              <span class="card-text" style="float: right;"><%= link_to 'delete', car_path(car), method: :delete, data: {confirm: "This will delete #{car.model}!"} %></span>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
