<div id="wrapper">
  <div class="container" style="width: 400px; margin: 20px auto;">
    <h1>Available Cars</h1>
  </div>
  <hr>
  <div class="container">
    <div style="float: right;">
      <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Sort by
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          <a class="dropdown-item" href="/cars/price_asc">Price: Low to High</a>
          <a class="dropdown-item" href="/cars/price_des">Price: High to Low</a>
          <a class="dropdown-item" href="/cars/age_asc">Age: Low to High</a>
          <a class="dropdown-item" href="/cars/age_des">Age: High to Low</a>
        </div>
      </div>
    </div>

    <div class="row d-flex justify-content-around">
    <!-- <% cars_by_price = @cars.sort_by { |car| car.price } %> -->
    <!-- <div class="container btn btn-secondary">Sort by price</div> -->
    <% @cars_age_des.each do |car| %>
        <div class="col-sm-3 mx-3">
          <div class="card mb-5" style="width: 16rem; box-shadow: 1px 1px 8px #00000040">
            <%= link_to car_path(car) do %>
              <%= image_tag car.image_url, class: "card-img-top card-image" %>
            <% end %>
            <div class="card-body">
              <h5 class="card-title"> <%= car.model %></h5>
              <span class="card-text"> <%= car.age %> <%= car.age == 1 ? "year" : "years" %> old</span>
              <span class="card-text" style="float: right; font-weight: bold;"> $ <%= car.price %></span>
            </div>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>
